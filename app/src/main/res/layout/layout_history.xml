<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <com.fearefull.dotaanalyser.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/heroImageInflate"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@mipmap/npc_dota_hero_ancient_apparition"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_marginTop="5dp"
                android:layout_gravity="top" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ancient_apparition"
                    android:id="@+id/heroNameInflate"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Co-op with bots"
                    android:id="@+id/typeMatchInflate"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Duration"
                        android:id="@+id/durationNameMatchInflate"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:textColor="@color/material_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25:64"
                        android:id="@+id/durationMatchInflate"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Result"
                        android:id="@+id/resultNameMatchInflate"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:textSize="12sp"
                        android:textColor="@color/material_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Win"
                        android:id="@+id/resultMatchInflate"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="K / D / A"
                        android:id="@+id/KDANameMatchInflate"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:textSize="12sp"
                        android:textColor="@color/material_grey_600" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 / 5 / 6"
                        android:id="@+id/KDAMatchInflate"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:text="125 days ago"
                android:id="@+id/dateMatchInflate"
                android:layout_gravity="top|right"
                android:gravity="right"
                android:textIsSelectable="false"
                android:textSize="11sp"
                android:textColor="@color/material_grey_600" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:minHeight="30dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/item0Inflate"
                android:layout_marginRight="10dp"
                android:src="@mipmap/item_poor_mans_shield"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/item1Inflate"
                android:layout_marginRight="10dp"
                android:src="@mipmap/item_poor_mans_shield"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/item2Inflate"
                android:layout_marginRight="10dp"
                android:src="@mipmap/item_poor_mans_shield"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/item3Inflate"
                android:layout_marginRight="10dp"
                android:src="@mipmap/item_poor_mans_shield"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/item4Inflate"
                android:layout_marginRight="10dp"
                android:src="@mipmap/item_poor_mans_shield"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/item5Inflate"
                android:layout_marginRight="10dp"
                android:src="@mipmap/item_poor_mans_shield"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/matchIDHistory"
            android:layout_gravity="right"
            android:visibility="gone" />

    </LinearLayout>

</android.support.v7.widget.CardView>

