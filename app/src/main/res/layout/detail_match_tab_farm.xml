<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1"
        android:fillViewport="false"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailLinearLayout">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:android="http://schemas.android.com/apk/res/android">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="5dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="38dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/heroImageInflate"
                                android:layout_width="10dp"
                                android:layout_height="12dp"
                                android:src="@mipmap/gold"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:text="Gold"
                                android:id="@+id/textView12"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="33dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/heroImageInflate"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/last_hit"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="18dp"
                                android:layout_height="wrap_content"
                                android:text="LH"
                                android:id="@+id/textView12"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/heroImageInflate"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@mipmap/deny"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="18dp"
                                android:layout_height="wrap_content"
                                android:text="DN"
                                android:id="@+id/textView12"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="GPM"
                            android:id="@+id/textView6"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="XPM"
                            android:id="@+id/textView6"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="10dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RADIANT"
                        android:id="@+id/textView5"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:gravity="left"
                        android:background="#076700"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:id="@+id/tableFarmRadiantLayout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DIRE"
                        android:id="@+id/textView4"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:background="#d9670002"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="left"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:id="@+id/tableFarmDireLayout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:id="@+id/loading_image"
        android:src="@mipmap/splash_image"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:gravity="top"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/no_connection_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone">

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/no_connection_image"
                android:src="@mipmap/no_connection"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Internet Connection"
                android:id="@+id/no_connection_text"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try Again"
                android:id="@+id/no_connection_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>