<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:id="@+id/hero_image_player"
                android:src="@mipmap/invoker_lg"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="user name"
                android:id="@+id/person_name_player"
                android:textColor="#000000"
                android:textSize="11sp"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:maxLength="18" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:id="@+id/item_0_player"
                    android:src="@mipmap/item_blink"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:id="@+id/item_1_player"
                    android:src="@mipmap/item_blink"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:id="@+id/item_2_player"
                    android:src="@mipmap/item_blink"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:id="@+id/item_3_player"
                    android:src="@mipmap/item_blink"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:id="@+id/item_4_player"
                    android:src="@mipmap/item_blink"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:id="@+id/item_5_player"
                    android:src="@mipmap/item_blink"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp"
                    android:id="@+id/space_0_item"
                    android:visibility="gone" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp"
                    android:id="@+id/space_1_item"
                    android:visibility="gone" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp"
                    android:id="@+id/space_2_item"
                    android:visibility="gone" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp"
                    android:id="@+id/space_3_item"
                    android:visibility="gone" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp"
                    android:id="@+id/space_4_item"
                    android:visibility="gone" />

                <Space
                    android:layout_width="25dp"
                    android:layout_height="19dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="5dp"
                    android:id="@+id/space_5_item"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
