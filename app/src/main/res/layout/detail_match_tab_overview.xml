<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1"
        android:fillViewport="false"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detailLinearLayout">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="3dp"
                        android:weightSum="1"
                        android:baselineAligned="false"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RADIANT VICTORY"
                            android:id="@+id/resultMatchDetail"
                            android:textSize="15sp"
                            android:textColor="@color/colorWin"
                            android:layout_gravity="center"
                            android:gravity="left" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="15dp"
                        android:weightSum="1"
                        android:baselineAligned="false"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.fearefull.dotaanalyser.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/heroImageInflate"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/lobby_type"
                                android:layout_marginRight="2dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Co-up with Bots"
                                android:id="@+id/lobbyTypeDetail"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.fearefull.dotaanalyser.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/heroImageInflate"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/game_mode"
                                android:layout_marginRight="2dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reverse Captain&apos;s Mode"
                                android:id="@+id/gameModeDetail"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:baselineAligned="false"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.fearefull.dotaanalyser.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/heroImageInflate"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/region"
                                android:layout_marginRight="2dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Europe West"
                                android:id="@+id/regionDetail"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.fearefull.dotaanalyser.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/heroImageInflate"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/duration"
                                android:layout_marginRight="2dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="39:43"
                                android:id="@+id/durationDetail"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <com.fearefull.dotaanalyser.CircleImageView
                                android:id="@+id/heroImageInflate"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/date"
                                android:layout_marginRight="2dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="127 hours ago"
                                android:id="@+id/startTimeDetail"
                                android:textSize="13sp"
                                android:textColor="#000000"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout android:orientation="vertical"
                    android:id="@+id/tableOverviewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:android="http://schemas.android.com/apk/res/android">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="145dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginLeft="5dp" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="5" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/heroImageInflate"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@mipmap/level"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="18dp"
                                android:layout_height="wrap_content"
                                android:text="L"
                                android:id="@+id/textView12"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/heroImageInflate"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:src="@mipmap/kill"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="18dp"
                                android:layout_height="wrap_content"
                                android:text="K"
                                android:id="@+id/textView12"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/heroImageInflate"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/death"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:text="D"
                                android:id="@+id/textView12"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                            <ImageView
                                android:id="@+id/heroImageInflate"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/assist"
                                android:layout_gravity="center" />

                            <TextView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:text="A"
                                android:id="@+id/textView12"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="left" />
                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="KDA"
                            android:id="@+id/textView6"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:gravity="center_horizontal" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RADIANT"
                        android:id="@+id/textView8"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:gravity="left"
                        android:background="#076700"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:id="@+id/tableOverviewRadiantLayout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DIRE"
                        android:id="@+id/textView38"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:background="#d9670002"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:gravity="left"
                        android:paddingLeft="10dp" />

                    <LinearLayout
                        android:id="@+id/tableOverviewDireLayout"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:id="@+id/loading_image"
        android:src="@mipmap/splash_image"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:gravity="top"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/no_connection_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone">

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/no_connection_image"
                android:src="@mipmap/no_connection"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:gravity="top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Internet Connection"
                android:id="@+id/no_connection_text"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textSize="16sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Try Again"
                android:id="@+id/no_connection_button"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>